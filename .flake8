[flake8]
# Maximum line length
max-line-length = 88

# Extend default ignore list
extend-ignore = 
    # E203: whitespace before ':'  (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    .mypy_cache,
    .pytest_cache,
    .tox,
    docs/conf.py

# Maximum complexity
max-complexity = 10

# Import order style
import-order-style = google

# Per-file ignores
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401,F403
    # Test files can have unused imports and long lines
    tests/*.py:F401,E501

# Enable specific warnings
select = 
    # pycodestyle errors
    E,
    # pycodestyle warnings  
    W,
    # pyflakes
    F,
    # mccabe complexity
    C,
    # pep8 naming
    N,

# Show source code for each error
show-source = true

# Show error codes in output
show-pep8 = true

# Statistics at the end
statistics = true

# Count errors
count = true
